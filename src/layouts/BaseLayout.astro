---
import { ViewTransitions } from 'astro:transitions'
import NavBar from '~/components/NavBar.astro'

interface Props {
  title: string
  description?: string
}

const { title, description = 'Personal website of Angus Hawkings' } =
  Astro.props

// Animation constants for consistency
const SLIDE_DURATION = '0.3s'
const SLIDE_EASING = 'cubic-bezier(0.4, 0, 1, 1)'
const SLIDE_EASING_IN = 'cubic-bezier(0, 0, 0.2, 1)'

// Define custom slide animation with directional support
const customSlide = {
  forwards: {
    old: {
      name: 'slideOutLeft',
      duration: SLIDE_DURATION,
      easing: SLIDE_EASING,
      fillMode: 'both',
    },
    new: {
      name: 'slideInRight',
      duration: SLIDE_DURATION,
      easing: SLIDE_EASING_IN,
      fillMode: 'both',
    },
  },
  backwards: {
    old: {
      name: 'slideOutRight',
      duration: SLIDE_DURATION,
      easing: SLIDE_EASING,
      fillMode: 'both',
    },
    new: {
      name: 'slideInLeft',
      duration: SLIDE_DURATION,
      easing: SLIDE_EASING_IN,
      fillMode: 'both',
    },
  },
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
    <script is:inline>
      // Define page order based on navbar
      const pageOrder = {
        '/': 0,
        '/about': 1,
        '/projects': 2,
      }

      // Override direction detection to consider page order
      document.addEventListener('astro:before-preparation', (event) => {
        const fromPath = window.location.pathname
        const toPath = new URL(event.to).pathname

        const fromIndex = pageOrder[fromPath]
        const toIndex = pageOrder[toPath]

        // Set direction based on page order if both pages are in the navbar
        if (fromIndex !== undefined && toIndex !== undefined) {
          if (toIndex < fromIndex) {
            // Going to a page to the left - set backwards
            event.direction = 'back'
          } else if (toIndex > fromIndex) {
            // Going to a page to the right - set forwards
            event.direction = 'forward'
          }
        }
      })
    </script>
  </head>
  <body>
    <NavBar />
    <main transition:animate={customSlide}>
      <slot />
    </main>
    <style is:global>
      :root {
        --color-bg: #0f0f0f;
        --color-text: #e4e4e7;
        --color-text-muted: #a1a1aa;
        --color-accent: #3b82f6;
        --color-accent-hover: #60a5fa;
        --spacing-nav: 1rem;
        --spacing-content: 2rem;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          'Segoe UI',
          Roboto,
          'Helvetica Neue',
          Arial,
          sans-serif;
        background-color: var(--color-bg);
        color: var(--color-text);
        line-height: 1.6;
      }

      body {
        max-width: 800px;
        margin: 0 auto;
        padding: var(--spacing-content);
      }

      main {
        margin-top: var(--spacing-content);
      }

      a {
        color: var(--color-accent);
        text-decoration: none;
        transition: color 0.2s ease;
      }

      a:hover {
        color: var(--color-accent-hover);
        text-decoration: underline;
      }

      h1,
      h2,
      h3 {
        margin-bottom: 1rem;
        line-height: 1.2;
      }

      p {
        margin-bottom: 1rem;
        color: var(--color-text-muted);
      }

      /* Custom slide animations */
      @keyframes slideOutLeft {
        to {
          transform: translateX(-100%);
        }
      }

      @keyframes slideInRight {
        from {
          transform: translateX(100%);
        }
      }

      @keyframes slideOutRight {
        to {
          transform: translateX(100%);
        }
      }

      @keyframes slideInLeft {
        from {
          transform: translateX(-100%);
        }
      }
    </style>
  </body>
</html>
