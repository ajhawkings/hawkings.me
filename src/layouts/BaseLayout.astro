---
import { ViewTransitions } from 'astro:transitions'
import NavBar from '~/components/NavBar.astro'

interface Props {
  title: string
  description?: string
}

const { title, description = 'Personal website of Angus Hawkings' } =
  Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
    <script>
      // Define page order based on navbar
      const pageOrder: Record<string, number> = {
        '/': 0,
        '/about': 1,
        '/projects': 2,
      }

      // Track navigation direction
      document.addEventListener('astro:before-preparation', (event) => {
        const fromPath = window.location.pathname
        const toPath = new URL((event as any).to).pathname

        const fromIndex = pageOrder[fromPath] ?? 1
        const toIndex = pageOrder[toPath] ?? 1

        // Set direction as forward or backward
        if (toIndex > fromIndex) {
          document.documentElement.dataset.direction = 'forward'
        } else if (toIndex < fromIndex) {
          document.documentElement.dataset.direction = 'backward'
        }
      })
    </script>
  </head>
  <body>
    <NavBar />
    <main transition:animate="slide">
      <slot />
    </main>
    <style is:global>
      :root {
        --color-bg: #0f0f0f;
        --color-text: #e4e4e7;
        --color-text-muted: #a1a1aa;
        --color-accent: #3b82f6;
        --color-accent-hover: #60a5fa;
        --spacing-nav: 1rem;
        --spacing-content: 2rem;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          'Segoe UI',
          Roboto,
          'Helvetica Neue',
          Arial,
          sans-serif;
        background-color: var(--color-bg);
        color: var(--color-text);
        line-height: 1.6;
      }

      body {
        max-width: 800px;
        margin: 0 auto;
        padding: var(--spacing-content);
      }

      main {
        margin-top: var(--spacing-content);
      }

      a {
        color: var(--color-accent);
        text-decoration: none;
        transition: color 0.2s ease;
      }

      a:hover {
        color: var(--color-accent-hover);
        text-decoration: underline;
      }

      h1,
      h2,
      h3 {
        margin-bottom: 1rem;
        line-height: 1.2;
      }

      p {
        margin-bottom: 1rem;
        color: var(--color-text-muted);
      }

      /* View Transitions - Sideways slide animation */
      @keyframes slide-from-right {
        from {
          transform: translateX(100%);
        }
      }

      @keyframes slide-to-left {
        to {
          transform: translateX(-100%);
        }
      }

      @keyframes slide-from-left {
        from {
          transform: translateX(-100%);
        }
      }

      @keyframes slide-to-right {
        to {
          transform: translateX(100%);
        }
      }

      /* Forward navigation: slide right to left */
      html[data-direction='forward'] ::view-transition-old(slide) {
        animation:
          90ms cubic-bezier(0.4, 0, 1, 1) both slide-to-left,
          300ms cubic-bezier(0.4, 0, 0.2, 1) both fade-out;
      }

      html[data-direction='forward'] ::view-transition-new(slide) {
        animation:
          210ms cubic-bezier(0, 0, 0.2, 1) 90ms both slide-from-right,
          300ms cubic-bezier(0.4, 0, 0.2, 1) both fade-in;
      }

      /* Backward navigation: slide left to right */
      html[data-direction='backward'] ::view-transition-old(slide) {
        animation:
          90ms cubic-bezier(0.4, 0, 1, 1) both slide-to-right,
          300ms cubic-bezier(0.4, 0, 0.2, 1) both fade-out;
      }

      html[data-direction='backward'] ::view-transition-new(slide) {
        animation:
          210ms cubic-bezier(0, 0, 0.2, 1) 90ms both slide-from-left,
          300ms cubic-bezier(0.4, 0, 0.2, 1) both fade-in;
      }

      /* Default: forward direction */
      ::view-transition-old(slide) {
        animation:
          90ms cubic-bezier(0.4, 0, 1, 1) both slide-to-left,
          300ms cubic-bezier(0.4, 0, 0.2, 1) both fade-out;
      }

      ::view-transition-new(slide) {
        animation:
          210ms cubic-bezier(0, 0, 0.2, 1) 90ms both slide-from-right,
          300ms cubic-bezier(0.4, 0, 0.2, 1) both fade-in;
      }

      @keyframes fade-in {
        from {
          opacity: 0;
        }
      }

      @keyframes fade-out {
        to {
          opacity: 0;
        }
      }
    </style>
  </body>
</html>
